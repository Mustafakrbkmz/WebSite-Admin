@model Yazi
@{
    ViewData["Title"] = "Yazı Güncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@section scripts{
    <script src="~/lib/ckeditor/ckeditor.js"></script>
    <script>
        CKEDITOR.replace("Icerik");
    </script>
}
<h3>Yazı Güncelle</h3>
<br />

<form asp-controller="Article" asp-action="Update" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group row">
        <label asp-for="Dil" class="col-md-1 control-label" style="padding-top:6px">Dil :</label>
        <div class="col-md-2">
            <input asp-for="Dil" type="text" class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Baslik" class="col-md-1 control-label" style="padding-top:6px">Başlık   :</label>
        <div class="col-md-5">
            <input asp-for="Baslik" type="text" class="form-control">
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Icerik" class="col-md-1 control-label" style="padding-top:6px">İçerik :</label>
        <div class="col-md-10">
            <textarea asp-for="Icerik" type="text" class="form-control"></textarea>
        </div>
    </div>


    <input type="submit" class="btn btn-info" value="Güncelle" />


</form>

