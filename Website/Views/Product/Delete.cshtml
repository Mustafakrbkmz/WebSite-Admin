@model Urun
@{
    ViewData["Title"] = "Sil";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<h3>Seçili ürünü silmek istediğinize emin misiniz?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Ürün Görseli :
        </dt>
        <dd>
            <img src="~/Img/UrunGorsel/@Model.OneCikanGorsel" alt="" />
        </dd>
        <hr />
        <dt>
            @Html.DisplayNameFor(model => model.Kodu):
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Kodu)
        </dd>
        <br />
        <dt>
            @Html.DisplayNameFor(model => model.Adi):
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Adi)
        </dd>
    </dl>
    <br />
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Sil" class="btn btn-danger" /> |
        <a class="btn btn-warning" asp-controller="Product" asp-action="List">Vazgeç</a>
    </form>
</div>

