@model UrunGrup
@{
    ViewData["Title"] = "GroupDelete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3>Seçili ürün grubunu silmek istediğinize emin misiniz?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        
        <dt>
            @Html.DisplayNameFor(model => model.Adi):
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Adi)
        </dd>
        <br />
        <dt>
            @Html.DisplayNameFor(model => model.Dil):
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Dil)
        </dd>
    </dl>
    <br />
    <form asp-action="GroupDelete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Sil" class="btn btn-danger" /> |
        <a class="btn btn-warning" asp-controller="Product" asp-action="GroupList">Vazgeç</a>
    </form>
</div>

