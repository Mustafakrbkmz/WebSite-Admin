@model Kategori
@{
    ViewData["Title"] = "Kategori Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3>Kategori Güncelle</h3>
<br />
<form asp-controller="Category" asp-action="Update" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group row">
        <label asp-for="Adi" class="col-md-1 control-label" style="padding-top:6px">Başlık   :</label>
        <div class="col-md-3">
            <input asp-for="Adi" type="text" class="form-control">
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Dil" class="col-md-1 control-label" style="padding-top:6px">Dil :</label>
        <div class="col-md-3">
            <input asp-for="Dil" type="text" class="form-control">
        </div>
    </div>



    <input type="submit" class="btn btn-info" value="Güncelle" />


</form>

