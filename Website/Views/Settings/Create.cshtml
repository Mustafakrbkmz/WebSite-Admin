        <div class="col-md-5">
            <input asp-for="Twitter" type="text" class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Instagram" class="col-md-2 control-label" style="padding-top:6px; text-align:right">Instagram :</label>
        <div class="col-md-5">
            <input asp-for="Instagram" type="text" class="form-control">
