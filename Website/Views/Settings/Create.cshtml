@model Ayar
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3>Ayar Ekle</h3>
<br />
<form asp-controller="Settings" asp-action="Create" method="post">

